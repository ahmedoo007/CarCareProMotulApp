<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:background="@color/background"
    tools:context=".Client.MakePayment">


    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/abril_fatface"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Payment Process"
        android:textColor="@color/write"
        android:textSize="32dp"
        android:textStyle="bold" />


        <ImageView
            android:id="@+id/imgGet1"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:background="@drawable/image_boundary"
            app:srcCompat="@drawable/logo"/>


    <TextView
        android:id="@+id/bo_name1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Product Name"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/write"
        />

    <TextView
        android:id="@+id/bo_price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="0.5"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/write"
        />

    <EditText
        android:id="@+id/buyer_name1"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:background="@drawable/textview"
        android:ems="10"
        android:hint="Enter your name"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/buyer_phone1"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:background="@drawable/textview"
        android:ems="10"
        android:hint="Enter your phone number"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/buyer_Address1"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Enter Address to deliver item"
        android:inputType="textMultiLine"
        android:background="@drawable/textview"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        />

    <TextView
        android:id="@+id/here1"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="Select any payment method"
        android:textColor="@color/write"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/radio_one1"
            android:layout_width="231dp"
            android:layout_height="30dp"
            android:checked="true"
            android:text="Cash on delivery"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio_two1"
            android:layout_width="231dp"
            android:layout_height="30dp"
            android:text="Payment Now"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RadioGroup>

    <EditText
        android:id="@+id/credit1"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Enter Credit Card number"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:background="@drawable/edittext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.879" />

    <Button
        android:id="@+id/confirm1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/abril_fatface"
        android:layout_marginTop="10dp"
        android:text="Confirm Purchase"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />
</LinearLayout>